{
  "name": "larapos-pos-electron",
  "version": "0.1.0",
  "private": true,
  "description": "Enterprise POS desktop client for LaraPOS",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p tsconfig.electron.json --watch\" \"wait-on tcp:5174 && electron .\"",
    "build": "vite build && tsc -p tsconfig.electron.json",
    "start": "electron ."
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "electron": "^34.0.2",
    "typescript": "^5.7.3",
    "vite": "^6.2.0",
    "wait-on": "^8.0.2"
  }
}
